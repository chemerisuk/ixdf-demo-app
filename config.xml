<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ixdf.cordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>IxDF</name>
    <description>
        A demo app for interaction-design.org
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="https://www.interaction-design.org/literature" />
    <access origin="*" />
    <allow-navigation href="https://www.interaction-design.org/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="AppendUserAgent" value="IxDF/1.0.0" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="ShowSplashScreenSpinner" value="true"/>
    <preference name="SplashMaintainAspectRatio" value="true" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="resources/android/drawable-land-hdpi/screen.png" density="land-hdpi" />
        <splash src="resources/android/drawable-land-ldpi/screen.png" density="land-ldpi" />
        <splash src="resources/android/drawable-land-mdpi/screen.png" density="land-mdpi" />
        <splash src="resources/android/drawable-land-xhdpi/screen.png" density="land-xhdpi" />
        <splash src="resources/android/drawable-land-xxhdpi/screen.png" density="land-xxhdpi" />
        <splash src="resources/android/drawable-land-xxxhdpi/screen.png" density="land-xxxhdpi" />
        <splash src="resources/android/drawable-port-hdpi/screen.png" density="port-hdpi" />
        <splash src="resources/android/drawable-port-ldpi/screen.png" density="port-ldpi" />
        <splash src="resources/android/drawable-port-mdpi/screen.png" density="port-mdpi" />
        <splash src="resources/android/drawable-port-xhdpi/screen.png" density="port-xhdpi" />
        <splash src="resources/android/drawable-port-xxhdpi/screen.png" density="port-xxhdpi" />
        <splash src="resources/android/drawable-port-xxxhdpi/screen.png" density="port-xxxhdpi" /> 
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
